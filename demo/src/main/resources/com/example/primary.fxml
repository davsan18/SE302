<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="520.0" prefWidth="840.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.MainController">

    <!-- MENU BAR -->
    <MenuBar VBox.vgrow="NEVER">
        <menus>
            <Menu text="File">
                <items>
                    <MenuItem text="New" onAction="#handleNew"/>
                    <MenuItem text="Open" onAction="#handleOpen"/>
                    <MenuItem text="Save As" onAction="#handleSaveAs"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Exit" onAction="#handleExit"/>
                </items>
            </Menu>

            <Menu text="Import">
                <items>
                    <MenuItem text="Students" onAction="#handleImportStudents"/>
                    <MenuItem text="Courses" onAction="#handleImportCourses"/>
                    <MenuItem text="Classrooms" onAction="#handleImportClassrooms"/>
                </items>
            </Menu>

            <Menu text="Edit">
                <items>
                    <MenuItem fx:id="miEditExam"
                              text="Exam"
                              onAction="#handleEditExam"/>
                </items>
            </Menu>

            <Menu text="View">
                <items>
                    <MenuItem text="Students" onAction="#handleViewStudents"/>
                    <MenuItem text="Courses" onAction="#handleViewCourses"/>
                    <MenuItem text="Classrooms" onAction="#handleViewClassrooms"/>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="miViewSchedule"
                               text="Schedule"
                              onAction="#handleViewSchedule"/>
                </items>
            </Menu>

            <Menu text="Help">
                <items>
                    <MenuItem text="User Manual" onAction="#handleUserManual"/>
                    <MenuItem text="About" onAction="#handleAbout"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>


    <ToolBar>
        <Button text="New" onAction="#handleNew"/>
        <Button text="Open" onAction="#handleOpen"/>
        <Button text="Save As" onAction="#handleSaveAs"/>
        <Separator orientation="VERTICAL"/>
        <Button fx:id="btnCreateSchedule"
                text="Create Schedule"
                onAction="#handleCreateSchedule"/>
        <Button fx:id="btnViewSchedule"
                text="View Schedule"
                onAction="#handleViewSchedule"/>
    </ToolBar>

    <TabPane fx:id="mainTabs">
        <tabs>
            <Tab text="Students" closable="false">
                <ListView fx:id="studentsList"/>

            </Tab>
            <Tab text="Courses" closable="false">
                <ListView fx:id="coursesList"/>
            </Tab>
            <Tab text="Classrooms" closable="false">
                <ListView fx:id="classroomsList"/>
            </Tab>
            <Tab text="Schedule (All Exams)" closable="false">
                <TableView fx:id="scheduleTableAll"/>
            </Tab>
            <Tab text="Schedule (By Student)" closable="false">
                <TableView fx:id="scheduleTableStudent"/>
            </Tab>
        </tabs>
    </TabPane>

</VBox>